<h1> Choose the Occasion </h1>
<script> function changeBarbieYellow() {
	var color = document.getElementById('myBarbieColor');
	color.src ="https://iwiish.files.wordpress.com/2016/01/casualshoppingyellow.jpg";
}
function changeBarbieBlue() {
	var color = document.getElementById('myBarbieColor');
	color.src ="https://iwiish.files.wordpress.com/2016/01/casualshoppingblue.jpg";
}
function changeBarbiePink() {
	var color = document.getElementById('myBarbieColor');
	color.src ="https://iwiish.files.wordpress.com/2016/01/casualshopping.jpg";
}</script>

<img id="myBarbieColor" src="https://iwiish.files.wordpress.com/2016/01/casualshopping.jpg" height="542" width="542" />
